<%= render 'layouts/nav' %>

<div class="blocks">

  <h2>your blocks</h2>
  <p class="subheader"><%= link_to "Click here", tweets_path %> to view saved trigger tweets.</p>

    <ul class="block-list">  
      <% if @blocks != [] %> 
        <% @blocks.each do |block| %>
          <li class="unblock" id="<%= block.id %>" >@<%= block.screen_name %>, <%= block.name %><br>
            <button class="unblock-button">unblock</button></li>
        <% end %>
      <% else %>
        <li>You have no blocked users.</li>
      <% end %>
    </ul>

  <h2>recent mentions</h2>
  <ul class="block-list">
    <% @mentions.each do |mention| %>
      <li>@<%= mention.user.screen_name %>: <%= mention.text %></li>
    <% end %>
  </ul>

</div>
